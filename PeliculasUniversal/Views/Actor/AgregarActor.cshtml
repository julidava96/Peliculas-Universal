<div class="col-4">          
<form method="post" action="CrearPelicula">
    @*FORM para formulario*@
    <fieldset>
        <legend>Agregar Actor</legend>
        <div>
            <label class="form-label "Id">Id del Actor:</label>
            <input class="form-control" type="text" name="Id" value="" />
        </div>
        <div>
            <label class="form-label" for="NombreYapellido"> Nombre y apellido del Actor:</label>
            <input class="form-control" type="text" name="NombreYapellido" value="" />
        </div>
        <div>
            <label class="form-label" for="paisDeOrigen">Pais de Origen del Actor:</label>
            <input class="form-control" type="text" name="paisDeOrigen" value="" />
        </div>
        <div>
            <label class="form-label" for="edad">Edad del Actor:</label>
            <input class="form-control" type="text" name="edad" value="" />
        </div>
        <div class="dropdown">
            <label class="form-label" for="Sexo">Sexo del Actor:</label>
            <input class="btn btn-primary" type="text" value="" />
@*            <input class="form-control" type="text" name="Sexo" value=""/>
*@        </div>

        <div class="form-check">
            <label class="form-check" for="Retirado">Retirado:</label>
            <input class="form-check" type="checkbox" name="Retirado" value="" />
        </div>

        <div class="mt-3">
            <input class="btn btn-primary" type="submit" value="Submit"/>
        </div>
    </fieldset>
</form>
</div>